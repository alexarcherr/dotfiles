#!/bin/sh

now=$(date +"%m.%d.%Y_%T")
logfile="$1/git_autocommit.log"

for dir in $1/*/
do
echo -e '\n' >> $logfile
echo "autocommit $dir $now" >> $logfile
echo "--------------------------" >> $logfile

cd $dir
git add . >> $logfile
git commit -am "autocommit $now" >> $logfile
git push origin master >> $logfile
done

